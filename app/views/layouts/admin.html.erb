<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <% if Rails.env.development? or Rails.env.test? %>
      <%= javascript_include_tag 'jquery.min.js' %>
    <% else %>
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
    <% end %>

    <%= stylesheet_link_tag 'application', 'default_001' %>
    <style type="text/css" media="screen">
      h1 {
        margin-left: 220px;
        padding-top: 30px;
      }
    </style>
    <%= yield :extra_headers %>
  </head>
  <body>
    
    <div class="noscreen"><a href="#content">Jump to main content</a><hr /></div>

    <div id="wrapper">
      <div id="wrapper-in">

        <div id="header">
          <a href="/" style="border: none"><img src="/images/logo.jpg" width="236" height="133" id="logo" alt="Drapno logo" style="border: none" /></a>
          
          <%= yield :page_title %>
        </div>
        
        <%= yield %>
        
      </div>
    </div>
  </body>
</html>