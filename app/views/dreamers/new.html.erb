<h2>Sign up</h2>

<%= form_for @user do |form| %>
  <%= render form %>
  
  <% if @invitation %>
    <%= hidden_field_tag 'code', @invitation.invitation_code %>
  <% end %>
  
  <%= form.submit 'Sign up', :disable_with => 'Please wait...' %>
<% end %>

<% content_for :extra_headers do %>
<style type="text/css" media="screen">
  label {
    display: block;
    float: left;
    width: 150px;
    font-weight: bold;
  }
</style>
<% end %>